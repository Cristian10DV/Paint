<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dam.paint.MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/btCirculos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="circulos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btLimpiar">

    </RelativeLayout>

    <Button
        android:id="@+id/btPincel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="16dp"
        android:text="Pincel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btLineas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="16dp"
        android:text="Lineas"
        app:layout_constraintStart_toEndOf="@+id/btCirculos"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:text="Limpiar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btCirculos" />

    <Button
        android:id="@+id/btBorrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="Borrar"
        app:layout_constraintBottom_toTopOf="@+id/rl1"
        app:layout_constraintStart_toStartOf="@+id/btLineas" />

    <Button
        android:id="@+id/btRojo"
        android:layout_width="29dp"
        android:layout_height="26dp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintBaseline_toBaselineOf="@+id/btVerde"
        app:layout_constraintEnd_toStartOf="@+id/btPincel" />

    <Button
        android:id="@+id/btVerde"
        android:layout_width="29dp"
        android:layout_height="26dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="49dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="17dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="@+id/btBorrar"
        app:layout_constraintEnd_toEndOf="@+id/rl1"
        app:layout_constraintStart_toStartOf="@+id/btRojo"
        app:layout_constraintTop_toBottomOf="@+id/btPincel" />

    <Button
        android:id="@+id/btAzul"
        android:layout_width="29dp"
        android:layout_height="26dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="12dp"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintBaseline_toBaselineOf="@+id/btVerde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btVerde" />

</android.support.constraint.ConstraintLayout>
